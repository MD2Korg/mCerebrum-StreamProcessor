<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.md2k.streamprocessor"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/app_theme_teal_light"
        tools:replace="android:theme">
        <activity
            android:name=".ActivityMain"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".ServiceStreamProcessor"
            android:enabled="true"
            android:exported="true" />
        <activity
            android:name=".ActivityStreamProcessorSettings"
            android:enabled="true"
            android:exported="true"
            android:screenOrientation="portrait"
            android:label="Settings: StreamProcessor">
            <intent-filter>
                <action android:name="org.md2k.streamprocessor.ActivityStreamProcessorSettings" />
            </intent-filter>
            >
        </activity>

    </application>

</manifest>
